@model MvcOgrenciKayit.Models.Students

@{
    ViewBag.Title = "Create";
}

<h3>Yeni Kayıt Ekleme İşlemi</h3>@*Yeni Kayıt Ekleme İşlemi başlığımız*@
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Öğrenci Bilgileri</h4>@*Öğrenci Bilgileri başlığımız*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @*Ad; label ve textbox kodlarımız*@
        <div class="form-group">
            @Html.LabelFor(model => model.StudentAd, htmlAttributes: new { @class = "control-label col-md-2" })@*Label*@
            <div class="col-md-10">
                <!--@Html.EditorFor(model => model.StudentAd, new { htmlAttributes = new { @class = "form-control" } })-->@*TextBox oluşturmak için 1. yol*@
                <!--@Html.ValidationMessageFor(model => model.StudentAd, "", new { @class = "text-danger" })-->
                @Html.TextBoxFor(model => model.StudentAd, new { @class = "form-control", Placeholder = "Adı Yazın", Required = "" })@*TextBox oluşturmak için 2. yol, PlaceHolder textbox da yazacak olan yazı, Required bu alan boş geçilemez özelliği*@
                @Html.ValidationMessageFor(model => model.StudentAd)
            </div>
        </div>

        @*Soyad; label ve textbox kodlarımız*@
        <div class="form-group">
            @Html.LabelFor(model => model.StudentSoyad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.StudentSoyad, new { @class = "form-control", Placeholder = "Soyadı Yazın", Required = "" })
                @Html.ValidationMessageFor(model => model.StudentSoyad)
            </div>
        </div>

        @*Mail; label ve textbox kodlarımız*@
        <div class="form-group">
            @Html.LabelFor(model => model.StudentMail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.StudentMail, new { @class = "form-control", Placeholder = "Maili Yazın", Required = "" })
            </div>
        </div>

        @*Fotoğraf; label ve textbox kodlarımız*@
        <div class="form-group">
            @Html.LabelFor(model => model.StudentiFotograf, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.StudentiFotograf, new { @class = "form-control", Placeholder = "Fotoğraf Linkini Yazın" })
                @Html.ValidationMessageFor(model => model.StudentiFotograf)

            </div>
        </div>

        @*Adres; label ve textbox kodlarımız*@
        <div class="form-group">
            @Html.LabelFor(model => model.StudentAdres, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.StudentAdres, new { @class = "form-control", Placeholder = "Adresi Yazın", Required = "" })
                @Html.ValidationMessageFor(model => model.StudentAdres)
            </div>
        </div>

        @*Ekle; butonu kodlarımız*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-danger" />
            </div>
        </div>
    </div>
}
<div>
    <!--@Html.ActionLink("Listeye Geri Dön" , "Index")-->@*Listeye Geri Dön butonu ekleme 1.Yol*@
    <a href="/Students/Index">Listeye Geri Dön</a>@*Listeye Geri Dön butonu ekleme 2. Yol*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
